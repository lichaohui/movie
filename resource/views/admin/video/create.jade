include ../../common/header
block content
  include ../common/nav
  section(class='container')
    div(class='row')
      form(class='form-horizontal' action='/admin/movie/store' method='post')
        div(class='form-group')
          label(class='col-sm-2 control-label' for='name') name
          div(class='col-sm-10')
            input(type='text' class='form-control' id='name' placeholder='name' name='name' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='director') director
          div(class='col-sm-10')
            input(type='text' class='form-control' id='director' placeholder='director' name='director' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='country') country
          div(class='col-sm-10')
            input(type='text' class='form-control' id='country' placeholder='country' name='country' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='type') type
          div(class='col-sm-10')
            input(type='text' class='form-control' id='type' name='type' placeholder='type' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='playbill') playbill
          div(class='col-sm-10')
            input(type='text' class='form-control' id='playbill' name='playbill' placeholder='playbill' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='src') src
          div(class='col-sm-10')
            input(type='text' class='form-control' id='src' placeholder='src' name='src' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='intro') intro
          div(class='col-sm-10')
            textarea(class='form-control' id='intro' name='intro' placeholder='intro' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='sub')
          div(class='col-sm-10')
            button(type='submit' class='form-control btn-primary' id='sub') submit
include ../../common/footer    