include ../../common/header
block content
  include ../common/nav
  section(class='container')
    div(class='row')
      form(class='form-horizontal' action='/admin/video/store' method='post')
        div(class='form-group')
          label(class='col-sm-2 control-label' for='name') 名称
          div(class='col-sm-10')
            input(type='text' class='form-control' id='name' placeholder='name' name='name' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='author') 作者
          div(class='col-sm-10')
            input(type='text' class='form-control' id='author' placeholder='author' name='author' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='parentcate') 一级分类
          div(class='col-sm-10')
            select(class='form-control' name='firstcate' id='parentcate' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='secondcate') 二级分类
          div(class='col-sm-10')
            select(class='form-control' name='secondcate' id='secondcate' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='playbill') 海报
          div(class='col-sm-10')
            input(type='text' class='form-control' id='playbill' name='playbill' placeholder='playbill' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='src') 视频地址
          div(class='col-sm-10')
            input(type='text' class='form-control' id='src' placeholder='src' name='src' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='intro') 介绍
          div(class='col-sm-10')
            textarea(class='form-control' id='intro' name='intro' placeholder='intro' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='sub')
          div(class='col-sm-10')
            button(type='submit' class='form-control btn-primary' id='sub') submit
include ../../common/footer
script(src='/js/admin/secondcatecreate.js')
script(src='/js/admin/videocreate.js')