include ../../common/header
  block content
    include ../common/nav
    section(class='container')
      div(class='row')
        form(class='form-horizontal' action='/admin/video/store' method='post' id='form')
          div(class='form-group')
            label(class='col-sm-2 control-label' for='name') 名称
            div(class='col-sm-10')
              input(type='text' class='form-control' id='name' placeholder='name' name='name' required)
          div(class='form-group')
            label(class='col-sm-2 control-label' for='queue') 课时
            div(class='col-sm-10')
              input(type='number' min='1' class='form-control' id='queue' placeholder='queue' name='queue' required)
          div(class='form-group')
            label(class='col-sm-2 control-label' for='course') 所属课程
            div(class='col-sm-10')
              input(type='hidden' name='course' id='course' value='#{course._id}')
              input(type='text' value='#{course.name}' class='form-control' readonly)
          div(class='form-group')
            label(class='col-sm-2 control-label' for='src') 视频
            div(class='col-sm-10')
              input(type='file' class='form-control' id='src' placeholder='src')
              input(type='hidden' name='src' required)
          div(class='form-group')
            label(class='col-sm-2 control-label' for='intro') 介绍
            div(class='col-sm-10')
              textarea(class='form-control' id='intro' name='intro' placeholder='intro')
          div(class='form-group')
            label(class='col-sm-2 control-label' for='sub')
            div(class='col-sm-10')
              button(type='submit' class='form-control btn-primary' id='sub') submit
  include ../../common/footer
  script(src='/libs/ali-oss/dist/aliyun-oss-sdk.min.js')
  script(src='/js/common/ossWrapper.js')
  script(src='/js/common/deleteFromAli.js')
  script(src='/js/common/uploadToAli.js')
  script(src='/js/common/loadfirstcate.js')
  script(src='/js/admin/videocreate.js')