include ../../common/header
block content
  style.
    .btn{margin-left:2px;margin-right:2px;}
  include ../common/nav    
  section(class='container')
    table(class='table table-bordered table-hover text-center')
      tr
        th name
        th director
        th country
        th type
        th created_at
        th playbill
        th operating
      each movie in movies
        tr
          td #{movie.name}
          td #{movie.director}
          td #{movie.country}
          td #{movie.type}
          td #{moment(movie.meta.created_at).format('YYYY MM DD')}
          td: img(src='#{movie.playbill}' width='100')
          td
            a(href='/movie/detail/#{movie._id}' target='_blank' class='btn btn-default btn-xs') view
            button(type='button' class='edit btn btn-primary btn-xs' data-id='#{movie._id}' data-toggle="modal" data-target="#myModal") edit
            button(type='button' class='del btn btn-danger btn-xs' data-id='#{movie._id}') delete
  button(type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal") demo
  div(class='modal fade' id='myModal' tabindex='-1' role='dialog' aria-labelledby="myModalLabel")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4(class="modal-title" id="myModalLabel") Edit
        div(class='modal-body')
          form(class='form-horizontal' action='' id='form')
            input(type='hidden',name='id',id='id')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='name') name
              div(class='col-sm-10')
                input(type='text' class='form-control' id='name' placeholder='name' name='name')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='director') director
              div(class='col-sm-10')
                input(type='text' class='form-control' id='director' placeholder='director' name='director')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='country') country
              div(class='col-sm-10')
                input(type='text' class='form-control' id='country' placeholder='country' name='country')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='type') type
              div(class='col-sm-10')
                input(type='text' class='form-control' id='type' placeholder='type' name='type')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='playbill') playbill
              div(class='col-sm-10')
                input(type='text' class='form-control' id='playbill' placeholder='playbill' name='playbill')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='src') src
              div(class='col-sm-10')
                input(type='text' class='form-control' id='src' placeholder='src' name='src')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='intro') intro
              div(class='col-sm-10')
                textarea(class='form-control' id='intro' name='intro' placeholder='intro')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='sub')
              div(class='col-sm-10')
                button(type='button' class='form-control btn-primary' id='sub') submit 
  include ../../common/footer            
  script(src='/js/common/jquery.form.js')
  script(src='/js/admin/list.js')          
        