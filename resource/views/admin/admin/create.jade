include ../../common/header
block content
  section(class='container')
    include ../common/nav
    div(class='row')
      div(class="alert alert-warning hidden" id='warning' role="alert")
      div(class="alert alert-success hidden" id='success' role="alert")
      form(class='form-horizontal' action='/admin/admin/store' method='post' id='form')
        div(class='form-group')
          label(class='col-sm-2 control-label' for='name') name
          div(class='col-sm-10')
            input(type='text' class='form-control' id='name' placeholder='name' name='name' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='password') country
          div(class='col-sm-10')
            input(type='password' class='form-control' id='password' placeholder='password' name='password' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='sub')
          div(class='col-sm-10')
            button(type='button' class='form-control btn-primary' id='sub') store
include ../../common/footer    
script(src='/js/common/jquery.form.js')
script(src='/js/admin/adminCreate.js')   