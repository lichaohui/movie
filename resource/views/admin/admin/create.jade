include ../../common/header
block content
  section(class='container')
    include ../common/nav
    br
    div(class='row')
      form(class='form-horizontal' action='/admin/admin/store' method='post')
        div(class='form-group')
          label(class='col-sm-2 control-label' for='name') name
          div(class='col-sm-10')
            input(type='text' class='form-control' id='name' placeholder='name' name='name' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='password') country
          div(class='col-sm-10')
            input(type='password' class='form-control' id='password' placeholder='password' name='password' required)
        div(class='form-group')
          label(class='col-sm-2 control-label' for='sub')
          div(class='col-sm-10')
            button(type='submit' class='form-control btn-primary' id='sub') submit
include ../../common/footer    