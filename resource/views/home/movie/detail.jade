include ../../common/header
block content
  style.
    .replyForm{margin-top:9px;}
    .list-group{margin-top:10px; margin-bottom:0;}
  section(class='container')
    include ../common/nav
    h2(class='text-center') #{movie.name}
    video(src='#{movie.src}', controls='controls',width='100%')
    dl(class='dl-horizontal')
      dt name:
      dd #{movie.name} 
      dt director:
      dd #{movie.director} 
      dt type:
      dd #{movie.type}  
      dt country:
      dd #{movie.country}
      dt created_at:
      dd #{moment(movie.meta.created_at).format('YYYY MM DD')}
      dt intro:
      dd #{movie.intro}
    h3(id='comments-tit') Comments  
    ul(id='comments' class='list-unstyled')
      each comment in comments
        li(class='panel panel-default')
          div(class="panel-heading") #{comment.from.name}:
            time(class='pull-right') #{moment(comment.meta.created_at).format('YYYY-MM-DD H:m:s')}
          div(class='panel-body') #{comment.content}
          div(class='panel-footer')
            input(type='hidden' id='movieId' name='movieId' value='#{movie._id}')
            if(user)
              button(type='button' class='reply btn btn-primary btn-xs') reply
              button(type='button' class='viewreply btn btn-default btn-xs' data-toggle="modal" data-target="#replies") view replies
              input(type='hidden' id='userid' value='#{user._id}')
              input(type='hidden' id='username' name='username' value='#{user.name}')
              form(action='/reply/store' method='post' role='form' class='replyForm hidden')
                input(type='hidden' name='from' value='#{user._id}')
                input(type='hidden' name='toWhichComment' value='#{comment._id}')
                div(class='form-group')
                  textarea(class='form-control' name='content' placeholder='Please input your comment here' required)
                b #{user.name}   
                button(type='submit' class='btn btn-default btn-xs') submit
            else
              button(type="button" class='btn btn-default btn-xs' data-toggle="modal" data-target="#myModal") login and reply
    div(class='text-center') 
      button(type='button' class='btn btn-sm btn-primary' id='viewMore') 
        span(id='more') 查看更多
        span(class='glyphicon glyphicon-chevron-down')
      button(type='button' class='btn btn-sm btn-default hidden' id='hiddenall') 收起评论
        span(class='glyphicon glyphicon-chevron-up')
    if(user)  
      input(type='hidden' id='isLogin' value='yes')
      form(action='/comment/store' method='post' role='form' id='commentForm')
        input(type='hidden' name='from' value='#{user._id}')
        input(type='hidden' name='movie' value='#{movie._id}')
        div(class='form-group')
          label(for='content') comment
          textarea(class='form-control' id='content' required name='content' placeholder='Please input your comment here')
        div(class='form-group')
          button(type='button' class='btn btn-default btn-xs' id='subComment') submit
    else
      input(type='hidden' id='isLogin' value='no')
      button(type="button" class='btn btn-default btn-xs' data-toggle="modal" data-target="#myModal") login and comments
    br
  div(class='modal fade' id='myModal' tabindex='-1' role='dialog' aria-labelledby="myModalLabel")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4(class="modal-title" id="myModalLabel") Login
        div(class='modal-body')
          div(class="alert alert-warning hidden" id='warning' role="alert")
          div(class="alert alert-success hidden" id='success' role="alert")
          form(class='form-horizontal' action='/doLogin' id='form')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='name') name
              div(class='col-sm-10')
                input(type='text' class='form-control' id='name' placeholder='name' name='name')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='password') password
              div(class='col-sm-10')
                input(type='password' class='form-control' id='password' placeholder='password' name='password')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='sub')
              div(class='col-sm-10')
                button(type='button' class='form-control btn-primary' id='login') login 
  div(class='modal fade' id='replies' tabindex='-1' role='dialog' aria-labelledby="myModalLabel")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4(class="modal-title") Replies
        div(class='modal-body')
          div(class='panel panel-default')
            div(class='panel-heading') lily
              time(class='pull-right') 2016-09-04 16:08:34
            div(class='panel-body') 我是第六条了吧 
              ul(class='list-group')
                li(class="list-group-item")
                  h5(class="list-group-item-heading")
                    b Jack 
                    replied to 
                    b lily  
                    time(class='pull-right') 2019-05-10 20:22:21
                  p(class="list-group-item-text") 我认为你说的很对 
                li(class="list-group-item")
                  h5(class="list-group-item-heading")
                    b Jack 
                    replied to 
                    b lily  
                    time(class='pull-right') 2019-05-10 20:22:21
                  p(class="list-group-item-text") 我认为你说的很对   
