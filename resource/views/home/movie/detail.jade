include ../../common/header
block content
  section(class='container')
    include ../common/nav
    h2(class='text-center') #{movie.name}
    video(src='#{movie.src}', controls='controls',width='100%')
    dl(class='dl-horizontal')
      dt name:
      dd #{movie.name} 
      dt director:
      dd #{movie.director} 
      dt type:
      dd #{movie.type}  
      dt country:
      dd #{movie.country}
      dt created_at:
      dd #{moment(movie.meta.created_at).format('YYYY MM DD')}
      dt intro:
      dd #{movie.intro}
    if(user)
      button(type='button' class='btn btn-default btn-xs' id='viewComment') user comment
    else
      button(type="button" class='btn btn-default btn-xs' data-toggle="modal" data-target="#myModal") login to view the comments
    div(class='panel panel-default')
      div(class="panel-heading") 
        b Lucy:
      div(class='panel-body') This film is boring!
      div(class='panel-footer')
        button(type='button' class='reply btn btn-default btn-xs') reply
        br
        br
        form(action='/comment/store' method='post' role='form' class='replyForm hidden')
          input(type='hidden' name='from' value='#{user._id}')
          input(type='hidden' name='toWho' value='')
          input(type='hidden' name='toWhichComment' value='')
          input(type='hidden' name='movie' value='#{movie._id}')
          div(class='form-group')
            textarea(class='form-control' name='content' placeholder='Please input your comment here')
          div(class='form-group') #{user.name}   
            button(type='submit' class='btn btn-default btn-xs') submit  
    form(action='/comment/store' method='post' role='form')
      input(type='hidden' name='from' value='#{user._id}')
      input(type='hidden' name='toWho' value='')
      input(type='hidden' name='toWhichComment' value='')
      input(type='hidden' name='movie' value='#{movie._id}')
      div(class='form-group')
        label(for='content') comment
        textarea(class='form-control' id='content' name='content' placeholder='Please input your comment here')
      div(class='form-group')
        button(type='submit' class='btn btn-default btn-xs') submit
  div(class='modal fade' id='myModal' tabindex='-1' role='dialog' aria-labelledby="myModalLabel")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4(class="modal-title" id="myModalLabel") Login
        div(class='modal-body')
          div(class="alert alert-warning hidden" id='warning' role="alert")
          div(class="alert alert-success hidden" id='success' role="alert")
          form(class='form-horizontal' action='/doLogin' id='form')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='name') name
              div(class='col-sm-10')
                input(type='text' class='form-control' id='name' placeholder='name' name='name')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='password') password
              div(class='col-sm-10')
                input(type='password' class='form-control' id='password' placeholder='password' name='password')
            div(class='form-group')
              label(class='col-sm-2 control-label' for='sub')
              div(class='col-sm-10')
                button(type='button' class='form-control btn-primary' id='login') login         
include ../../common/footer      
script(src='/js/common/jquery.form.js')
script(src='/js/home/movieDetail.js')