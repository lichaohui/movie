include ../../common/header
block content
  section(class='container')
    include ../common/nav
    div
      h2(class='text-center') #{movie.name}
      video(src='#{movie.src}', controls='controls',width='100%')
      dl(class='dl-horizontal')
        dt name:
        dd #{movie.name}
      dl(class='dl-horizontal')    
        dt director:
        dd #{movie.director}
      dl(class='dl-horizontal')    
        dt type:
        dd #{movie.type}
      dl(class='dl-horizontal')    
        dt country:
        dd #{movie.country}
include ../../common/footer        