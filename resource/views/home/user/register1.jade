include ../../common/header
  block content
    section(class='container')
      include ../common/nav      
      div(class="alert alert-warning hidden" id='warning' role="alert")
      div(class="alert alert-success hidden" id='success' role="alert")
      div(class='tab-content')
        form(role="tabpanel" class="form-horizontal tab-pane active" action='/unique' method='post' id='form')
          div(class='form-group')
            label(for='vcode' class='col-md-1 col-sm-2 col-xs-12 control-label') 手机短信/邮箱验证码
            div(class='col-sm-3 col-xs-4')
              input(type='text' class='form-control' name='vocode' id='vcode')
            div(class='col-sm-2 col-xs-4')
          div(class="form-group")
            label(for="name" class="col-md-1 col-sm-2 control-label") 用户名
            div(class="col-md-11 col-sm-10")
              input(type="text" class="form-control" id="name" name='name')
          div(class='form-group')
            label(for='password' class='col-sm-2 control-label') Password
            div(class='col-sm-10')
              input(type='password' class='form-control' id='password' placeholder='Password' name='password' required)
          div(class='form-group')
            label(for='passwordrepeat' class='col-sm-2 control-label') PasswordRepeat
            div(class='col-sm-10')
              input(type='password' class='form-control' id='passwordrepeat' placeholder='Passwordrepeat' name='passwordrepeat' required)      
          div(class='form-group')
            lael(class='col-md-1 col-sm-2')
            div(class='col-md-11 col-sm-10')
              button(type='button' id='sub' class='btn btn-primary') register   
  include ../../common/footer    
  script(src='/js/common/jquery.form.js')
  script(src='/js/home/user.js')