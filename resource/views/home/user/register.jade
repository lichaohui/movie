include ../../common/header
  block content
    section(class='container')
      include ../common/nav
      div(class="alert alert-warning hidden" id='warning' role="alert")
      div(class="alert alert-success hidden" id='success' role="alert")
      form(class="form-horizontal" action='/doregister' method='post' id='form')
        div(class="form-group")
          label(for="name" class="col-sm-2 control-label") Name
          div(class="col-sm-10")
            input(type="name" class="form-control" id="name" placeholder="Name" name='name' required)
        div(class='form-group')
          label(for='password' class='col-sm-2 control-label') Password
          div(class='col-sm-10')
            input(type='password' class='form-control' id='password' placeholder='Password' name='password' required)
        div(class='form-group')
          label(for='passwordrepeat' class='col-sm-2 control-label') PasswordRepeat
          div(class='col-sm-10')
            input(type='password' class='form-control' id='passwordrepeat' placeholder='Passwordrepeat' name='passwordrepeat' required)
        div(class='form-group')
          lael(for='sub' class='col-sm-2')
          div(class='col-sm-10')
            button(type='button' id='sub' class='btn btn-primary') Register
  include ../../common/footer    
  script(src='/js/common/jquery.form.js')
  script(src='/js/home/user.js')