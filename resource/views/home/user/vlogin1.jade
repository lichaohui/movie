include ../../common/header
  block content
    section(class='container')
      include ../common/nav      
      div(class="alert alert-warning hidden" id='warning' role="alert")
      div(class="alert alert-success hidden" id='success' role="alert")
      div(class='tab-content')
        form(role="tabpanel" class="form-horizontal tab-pane active" action='/doregister' method='post' id='form')
          input(type='hidden' name='#{type}' value='#{val}')
          div(class='form-group')
            label(for='vcode' class='col-sm-2 col-xs-12 control-label') 验证码
            div(class='col-sm-6 col-xs-7')
              input(type='text' class='form-control' name='vcode' id='vcode' placeholder='(短信/邮箱)动态验证码')
            div(class='col-sm-4 col-xs-5')
              button(type='button' id='resend' class='btn btn-default' data-type='#{type}' data-val='#{val}' disabled)
          div(class='form-group')
            label(for='name' class='col-sm-2 col-xs-12 control-label') 账号
            div(class='col-sm-10')
              input(type='text' class='form-control' id='name' name='name' value='#{account}' readonly)
          div(class='form-group')
            label(for='password' class='col-sm-2 control-label') 新密码
            div(class='col-sm-10')
              input(type='password' class='form-control' id='password' placeholder='Password' name='password' required)
          div(class='form-group')
            label(for='passwordrepeat' class='col-sm-2 control-label') 确认新密码
            div(class='col-sm-10')
              input(type='password' class='form-control' id='passwordrepeat' placeholder='Passwordrepeat' name='passwordrepeat' required)      
          div(class='form-group')
            lael(class='col-sm-2')
            div(class='col-sm-10')
              button(type='button' id='sub' class='btn btn-primary') 登录   
  include ../../common/footer    
  script(src='/js/common/jquery.form.js')
  script(src='/js/home/user.js')
  script(src='/js/home/resend.js')