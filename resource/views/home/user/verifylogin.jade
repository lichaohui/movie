include ../../common/header
  block content
    section(class='container')
      include ../common/nav
      ul(class="nav nav-tabs" role="tablist")
        li(role="presentation" class="active")
          a(href="#phoneform" role="tab" data-toggle="tab") 手机验证登录
        li(role="presentation")
          a(href="#emailform" role="tab" data-toggle="tab") 邮箱验证登录
      br      
      div(class="alert alert-warning hidden" id='warning' role="alert")
      div(class="alert alert-success hidden" id='success' role="alert")
      div(class='tab-content')
        form(role="tabpanel" class="form-horizontal tab-pane active" action='/phonecode' method='post' id='phoneform')
          input(type='hidden' name='type' value='phone')
          div(class="form-group")
            label(for="phone" class="col-md-1 col-sm-2 control-label") 手机号
            div(class="col-md-11 col-sm-10")
              input(type="number" class="form-control" id="phone" name='phone')
          div(class='form-group')
            label(for='captcha' class='col-md-1 col-sm-2 col-xs-12 control-label') 验证码
            div(class='col-sm-3 col-xs-4')
              input(type='text' class='form-control' name='captcha')
            div(class='col-sm-2 col-xs-4')
              img(src='/captcha' title='点击刷新' onclick="this.src=this.src+'?t='+Math.random()")
          div(class='form-group')
            lael(for='checkphone' class='col-md-1 col-sm-2')
            div(class='col-md-11 col-sm-10')
              button(type='button' data-way='phone' class='checkunique btn btn-primary') 下一步 >>
        form(role="tabpanel" class="form-horizontal tab-pane" action='/emailcode' method='post' id='emailform')
          input(type='hidden' name='type' value='email')
          div(class="form-group")
            label(for="email" class="col-md-1 col-sm-2 control-label") 邮箱
            div(class="col-md-11 col-sm-10")
              input(type="email" class="form-control" id="email" name='email')
          div(class='form-group')
            label(for='captcha' class='col-md-1 col-sm-2 col-xs-12 control-label') 验证码
            div(class='col-sm-3 col-xs-4')
              input(type='text' class='form-control' name='captcha')
            div(class='col-sm-2 col-xs-4')
              img(src='/captcha' title='点击刷新' onclick="this.src=this.src+'?t='+Math.random()")
          div(class='form-group')
            lael(for='checkphone' class='col-md-1 col-sm-2')
            div(class='col-md-11 col-sm-10')
              button(type='button' data-way='email' class='checkunique btn btn-primary') 下一步 >>      
  include ../../common/footer    
  script(src='/js/common/jquery.form.js')
  script(src='/js/home/check.js')
  script(src='/js/home/login.js')