include ../../common/header
block content
  section(class='container')
    include ../common/nav
    form(class="form-horizontal" action='/register' method='post')
      div(class="form-group")
        label(for="name" class="col-sm-2 control-label") Name
        div(class="col-sm-10")
          input(type="name" class="form-control" id="name" placeholder="Name" name='name')
      div(class='form-group')
        label(for='password' class='col-sm-2 control-label') Password
        div(class='col-sm-10')
          input(type='password' class='form-control' id='password' placeholder='Password' name='name')
      div(class='form-group')
        label(for='passwordrepeat' class='col-sm-2 control-label') PasswordRepeat
        div(class='col-sm-10')
          input(type='password' class='form-control' id='passwordrepeat' placeholder='Passwordrepeat' name='passwordrepeat')
      div(class='form-group')
        lael(for='sub' class='col-sm-2')
        div(class='col-sm-10')
          button(type='submit' class='btn btn-primary') Register
include ../../common/footer          